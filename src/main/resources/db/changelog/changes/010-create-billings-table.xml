<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-create-billings-table" author="system">
        <createTable tableName="billings">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_subscription_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_billings_user_subscription" references="user_subscriptions(id)"/>
            </column>
            <column name="billing_period_start" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="billing_period_end" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="base_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="negotiated_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="pro_rata_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="bill_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="due_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="paid_date" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="payment_method" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="pdf_path" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="email_sent" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="email_sent_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_billings_user_subscription" tableName="billings">
            <column name="user_subscription_id"/>
        </createIndex>
        <createIndex indexName="idx_billings_status" tableName="billings">
            <column name="status"/>
        </createIndex>
        <createIndex indexName="idx_billings_due_date" tableName="billings">
            <column name="due_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

