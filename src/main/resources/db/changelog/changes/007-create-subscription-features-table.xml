<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-subscription-features-table" author="system">
        <createTable tableName="subscription_features">
            <column name="subscription_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_subscription_features_subscription" references="subscriptions(id)"/>
            </column>
            <column name="feature_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_subscription_features_feature" references="features(id)"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="subscription_features" columnNames="subscription_id, feature_id"/>
    </changeSet>

</databaseChangeLog>

